          border-top: dotted 4px #4E36294D;
    }
  }
   @media(max-width:767px){
    /* .full-width-video-slider {
    padding: 150px 0 0;
} */
     .full-width-video-slider .section__title .dotted-line.left{
          display:none;
    }
     .full-width-video-slider .section__title .dotted-line.right{
       width:100%;
     }
     .full-width-video-slider .heading-section{
       flex-direction:column;
       margin-bottom:20px;
     }
     .full-width-video-slider .heading-section h2{
       padding:0;
       margin-bottom:10px;
     }
     .full-width-video-slider .slick-arrow {
       left:30px;
     }
      .full-width-video-slider .slick-next {
    left: auto;
    right: 30px;
}
     .full-width-video-slider .video-content .popup-video{
 width: 80px;
height: 80px;

 }
     .full-width-video-slider .video-content span{
       margin-top:20px;
     }
  }
  @media(max-width:767px){
    .full-width-video-slider .slick-initialized .slick-slide{
  margin:0 10px;
}
  }
    @media(max-width:600px){
      .full-width-video-slider .slick-arrow:before{
        width:24px;
        height:24px;
      }
       .full-width-video-slider {
    padding: 150px 0 70px;
}
       .full-width-video-slider .slick-next {
        left: auto !important;
        right: calc(50% - 20px);
    }
      .full-width-video-slider .slick-arrow {
      left: calc(50% - 20px);
        color:#3176af;
    }
      .full-width-video-slider .slick-arrow{
          width: 14px;
          height: 30px;
            bottom: -50px;
    top: auto;

      }
  }
  @media(max-width:480px){
        .full-width-video-slider .video-content span {
        margin-top: 10px;
        font-size: 16px;
    }
        .full-width-video-slider .video-content .popup-video {
        width: 60px;
        height: 60px;
    }
  }
</style>