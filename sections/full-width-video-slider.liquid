{% if section.blocks.size > 0 %}
  <div class="full-width-video-slider">
    
      <div class="heading-section section__title">
        {% if section.settings.title != blank %}
          <div class="dotted-line left">
          </div>
            <h2>{{ section.settings.title }}</h2>
          <div class="dotted-line right">
          </div>
          {% endif %}
      </div>
      <div class="video-slider-wrapper js__video-slider">
        {% for block in section.blocks %}
          {% if block.settings.video != blank %}
          <div class="video-slider">
            <div class="video-wrapper">
                <!-- {{ block.settings.video2 | video_tag: class: 'alecTestMobile', muted: true, controls: false, image_size: '1000x' }} -->
               {% if block.settings.image != blank %}
                    <div class="image-section">
                      {{ block.settings.image | image_url: width: 500 | image_tag: loading: 'lazy' }}
                    </div>
                  {% else %}
                 <video >
                      <source src="{{block.settings.video}}" type="video/mp4">
                    </video>
                   {% endif %}
            </div>
            <div class="video-content">
              <a class="popup-video" data-lity href="{{block.settings.video}}">
                     <svg xmlns="http://www.w3.org/2000/svg" width="125" height="125" viewBox="0 0 125 125" fill="none">
    <path fill-rule="evenodd" clip-rule="evenodd" d="m62.5 115.551-10.853 8.499-7.292-11.698-13.105 4.275-2.85-13.487-13.778-.466 1.934-13.648-12.787-5.15 6.486-12.164L0 62.5l10.255-9.212-6.486-12.164 12.787-5.15-1.934-13.648L28.4 21.86 31.25 8.373l13.105 4.275L51.647.95 62.5 9.449l10.853-8.5 7.292 11.7L93.75 8.372 96.6 21.86l13.778.466-1.934 13.648 12.787 5.15-6.486 12.164L125 62.5l-10.255 9.212 6.486 12.164-12.787 5.15 1.934 13.648-13.777.466-2.851 13.487-13.105-4.275-7.292 11.698-10.853-8.499z" fill="#FFA400"/>
    <path d="M84.5 59.402c2 1.155 2 4.041 0 5.196L53 82.785c-2 1.154-4.5-.29-4.5-2.599V43.813c0-2.309 2.5-3.752 4.5-2.598l31.5 18.187z" fill="#fff"/>
                    </svg>
            </a>
            {% if block.settings.content != blank %}
            <span class="text">{{ block.settings.content }}</span>
              {% endif %}
                  <!-- {% if block.settings.video contains '.mp4' %}
                    <video controls>
                      <source src="{{block.settings.video}}" type="video/mp4">
                    </video>
                  {% endif %} -->
                </div>
            </div>
          
            {% endif %}
        {% endfor %}
      </div>
    
  </div>
{% endif %}
{% schema %}
{
  "name": "Video Slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "id": "video",
          "type": "url",
          "label": "Video",
          "info": "Video URL (vimeo/mp4)"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image",
          "info": "500 x 500px Recommended"
        },
        {
          "id": "content",
          "type": "text",
          "label": "Description"
        }
      ]
    }
  ]
}
{% endschema %}
<style>
.full-width-video-slider{
/* padding:210px 0 0; */
  padding:80px 0 30px;
}
 
 .full-width-video-slider.section--white-overlay:before{
       display:none;

  }
.full-width-video-slider.section--white-overlay:after{
display:none;
}
.full-width-video-slider .heading-section{
  padding-top:80px;
max-width: 1340px;
width: 100%;
margin: 0 auto 40px;
display: flex;
align-items: center;
justify-content: center;
padding: 0 30px;
}
.full-width-video-slider .heading-section h2{
font-size:40px;
margin-bottom: 0;
padding:0 40px;
}
.full-width-video-slider .slick-arrow {
    position: absolute;
    top: 50%;
    z-index: 2;
    padding: 0;
    width: 22px;
    height: 42px;
    margin-top: -21px;
    border: none;
    background: none;
    color:white;
    font-size: 0;
    -webkit-appearance: none;
    appearance: none;
    -webkit-transition: opacity .4s,visibility .4s;
    transition: opacity .4s,visibility .4s;
    left: 80px;
}
 .full-width-video-slider .slick-next {
    left: auto;
    right: 80px;
}
.full-width-video-slider .slick-arrow:before {
position: absolute;
top: 6px;
left: -7px;
content: "";
width: 30px;
height: 30px;
display: inline-block;
vertical-align: middle;
border-width: 0 0 2px 2px;
border-style: solid;
border-color: currentColor;
margin: 0;
transform: rotate(45deg);
transform-origin: 50% 50%;
transition: all .4s;
}
.full-width-video-slider  .slick-next:before {
    left:0px;
    -webkit-transform: rotate(-135deg);
    -ms-transform: rotate(-135deg);
    transform: rotate(-135deg);
}
.full-width-video-slider .slick-initialized .slick-slide{
  max-width: 1000px;
  margin:0 20px;
/* width:100% !important; */
}
.full-width-video-slider .slick-list{
padding:0 !important;

}
.full-width-video-slider .video-slider {
    max-height: 562px;
    height: 52.5vw;
  display: flex !important;
align-items: center;
justify-content: center;
}
  .full-width-video-slider .video-slider .video-wrapper{
    position:absolute;
    width:100%;
    height:100%;
    top:0;
    left:0;
    
  }
  .full-width-video-slider .video-slider video,.full-width-video-slider .image-section,.full-width-video-slider .image-section img{
     width:100%;
    height:100%;
    object-fit:cover;
    cursor:pointer;
  }
   .full-width-video-slider .video-slider{
     position:relative;
   }
   .full-width-video-slider .video-slider:before{
     position:absolute;
     content:"";
     left:0;
     top:0;
     width:100%;
     height:100%;
     background:black;
     opacity:0.3;
     z-index:1;
   }
   .full-width-video-slider .video-content{
     position:relative;
     padding:0 30px;
     z-index:3;
     width:100%;
     text-align:center;
   }
  .full-width-video-slider .video-content span{
    color: white;
    line-height: 1.25;
    font-size: 20px;
    display: block;
    font-weight: normal;
    margin-top: 30px;
    text-transform: uppercase;
    font-family: Intro Rust Base, sans-serif;
  }
 .full-width-video-slider .video-content .popup-video{
 width: 125px;
height: 125px;
display: block;
margin: 0 auto;
 }
   .full-width-video-slider .video-content .popup-video svg{
         width: 100%;
    height: 100%;
   }
  @media(max-width:1023px){
    /* .full-width-video-slider {
    padding: 260px 0 0;
} */
