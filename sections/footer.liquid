
{%- assign _section = section.settings -%}

<footer class="footer" role="contentinfo">
  <div class="shell">
    <div class="footer__inner">
      <div class="footer__content {% comment %} hidden-xs hidden-sm {% endcomment %}">
        {% comment %}Footer Menu{% endcomment %}
        <nav class="footer__nav" role="navigation" aria-label="Footer navigation">
          {%- assign footer_menu = _section.footer_menu | default: 'footer' -%}

          {%- render 'menu', handle: footer_menu -%}
        </nav><!-- /.footer__nav -->
      </div><!-- /.footer__content -->

      <div class="footer__aside">
        {%- render 'subscribe' subscribe_object: _section -%}

        {%- render 'socials' socials_modifier: 'footer__socials' -%}
      </div><!-- /.footer__aside -->
    </div><!-- /.footer__inner -->

    {%- if _section.copyright != blank or _section.footer_bottom_menu != blank -%}
      <div class="footer__bar">
        {%- if _section.footer_bottom_menu != blank -%}
          <nav class="footer__nav-inline" role="navigation" aria-label="Footer bottom navigation">
            {%- render 'menu', handle: _section.footer_bottom_menu -%}
          </nav><!-- /.footer__nav-inline -->
        {%- endif -%}

        {%- if _section.copyright != blank -%}
          <div class="copyright footer__copyright">
            {%- assign current_year = 'now' | date: '%Y' -%}
            {{ _section.copyright | replace: '[year]', current_year }}
          </div><!-- /.copyright -->
        {%- endif -%}
      </div><!-- /.footer__bar -->
    {%- endif -%}
  </div><!-- /.shell -->
</footer><!-- /.footer -->


