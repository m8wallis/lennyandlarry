{%- assign _section = section.settings -%}

<section class="section-instafeed">
  <div class="shell shell--wide section__shell">
    {%- if _section.title != blank -%}
      <header class="section__head">
        <i class="ico-instagram ico-instagram--mobile-small">
            {%- render 'svg-elements' name: 'instagram' -%}
        </i>
        <h4 class="h5 h5--large title-rust section__title">
          {%- if _section.link != blank -%}
            <a href="{{ _section.link }}" target="_blank">
              {{ _section.title }}
            </a>
          {%- else -%}
            <span>
              {{ _section.title }}
            </span>
          {%- endif -%}
        </h4>
      </header><!-- /.section__head -->
    {%- endif -%}

    <div class="section__body">
      <div id="insta-feed"></div>
    </div><!-- /.section__body -->
  </div><!-- /.shell -->
</section><!-- /.section-instafeed -->

{% schema %}
{
  "name": "Section Instafeed",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "@LENNYANDLARRYS"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Section Instafeed"
    }
  ]
}
{% endschema %}
