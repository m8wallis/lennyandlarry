{%- assign article_tags = article.tags | join: ',' -%}
{%- assign date_format = 'date_formats.short' | t -%}
{%- assign published_at = article.published_at | date: date_format -%}

{%- capture subtitle_html -%}
<div class="section__meta">
	<strong class="h5 h5--mobile-xxsmall title-rust">{{ article_tags }}</strong>

	<span>{{ published_at }}</span>
</div><!-- /.section__meta -->
{%- endcapture -%}

{%- render 'section-triangles-top' section_subtitle_html: subtitle_html, section_title: article.title, section_modifier: 'section--triangles-secondary section--article' -%}

<article class="article">
	<div class="shell article__shell">
		{%- if article.image != blank -%}
		<div class="article__image">
			{{ article.image | img_url: '1900x' | img_tag: article.image.alt }}
		</div><!-- /.article__image -->
		{%- endif -%}

		<div class="article__body">
			{%- if article.content != blank -%}
			<div class="article__content">
				<div class="article__entry entry">
					{{ article.content }}
				</div><!-- /.article__entry -->


			</div><!-- /.article__content -->
			{%- endif -%}



			<div class="article__aside">
				{%- render 'share' share_modifier: 'article__share' -%}
			</div><!-- /.article__aside -->

		</div><!-- /.article__body -->
	</div><!-- /.shell -->
	{%- if article.metafields.accentuate.special_offer_section != blank -%}
	{%- section 'section-blog-form' -%}
	{%- endif -%}
</article><!-- /.article -->

{%- assign counter = 0 -%}
{%- assign related_articles = '' -%}
{%- if blog.articles.size > 1 -%}
{%- for _article in blog.articles -%}
{%- if _article.url == article.url -%}
{% continue %}
{%- endif -%}

{%- assign counter = counter | plus: 1 -%}

{%- capture related_articles -%}
{{ related_articles }}

{%- render 'article-item' _article: _article, _article_modifier: 'article-item--secondary article-items__item' -%}
{%- endcapture -%}

{%- if counter == 4 -%}
{% break %}
{%- endif -%}
{%- endfor -%}
{%- endif -%}

{%- if related_articles != '' -%}
<section class="section-default section-default--related-articles">
	<div class="shell">
		<header class="section__head">
			<h4 class="section__title h4 h4--mobile-small">{{ 'blogs.article.related_title' | t }}</h4><!-- /.section__title -->
		</header><!-- /.section__head -->

		<div class="section__body">
			<div class="article-items">
				{{ related_articles }}
			</div><!-- /.article-items -->
		</div><!-- /.section__body -->

		<div class="section__actions">
			<a href="{{ blog.url }}" class="btn btn--blue btn--inverse btn--large">{{ 'blogs.article.related_view_blog' | t }}</a>
		</div><!-- /.section__actions -->
	</div><!-- /.shell -->
</section><!-- /.section-default -->
{%- endif -%}
