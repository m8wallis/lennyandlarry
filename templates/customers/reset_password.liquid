<div class="form form--triangles form--reset form--xsmall">
	{% form 'reset_customer_password' %}
		{%- assign error_class = 'form__row--error' | prepend: ' ' -%}
		{%- capture error_password -%}{%- if form.errors contains "password" -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}
		{%- capture error_password_confirm -%}{%- if form.errors contains "password_confirmation" -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}

		<div class="form__triangles">
			<div class="shell">
				<div class="form__holder">
					<div class="form__head">
						<h2 class="form__title">
							<span>
								{{- 'customer.reset_password.title' | t -}}
							</span>
						</h2><!-- /.form__title -->
					</div><!-- /.form__head -->

					<div class="form__description entry">
						<p>
							{{- 'customer.reset_password.subtext' | t: email: email -}}
						</p>
					</div><!-- /.form__description -->
				</div><!-- /.form__holder -->
			</div><!-- /.shell -->
		</div><!-- /.form__triangles -->

		<div class="form__container">
			<div class="shell">
				<div class="form__holder">
					{% if form.errors %}
						<div class="form__errors">
							{{- form.errors | default_errors -}}
						</div><!-- /.form__errors -->
					{% endif %}

					<div class="form__body">
						<div class="form__row{{- error_password -}}">
							<label for="field-password" class="form__label">{{- 'customer.reset_password.password' | t -}}</label>

							<div class="form__controls">
								<input type="password" class="field" name="customer[password]" id="field-password" value="" placeholder="{{- 'customer.reset_password.password' | t -}}" required>
							</div><!-- /.form__controls -->
						</div><!-- /.form__row -->

						<div class="form__row{{- error_password_confirm -}}">
							<label for="field-password-confirm" class="form__label">{{- 'customer.activate_account.password_confirm' | t -}}</label>

							<div class="form__controls">
								<input type="password" class="field" name="customer[password_confirmation]" id="field-password-confirm" value="" placeholder="{{- 'customer.activate_account.password_confirm' | t -}}" required>
							</div><!-- /.form__controls -->
						</div><!-- /.form__row -->
					</div><!-- /.form__body -->

					<div class="form__actions">
						<ul>
							<li>
								<button type="submit" class="form__btn btn btn--xlarge">
									{{- 'customer.reset_password.submit' | t -}}
								</button>
							</li>
						</ul>
					</div><!-- /.form__actions -->
				</div><!-- /.form__holder -->
			</div><!-- /.shell -->
		</div><!-- /.form__container -->
	{% endform %}
</div><!-- /.form -->
