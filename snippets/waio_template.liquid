{%- assign form_submitted = false -%}
{% form 'recover_customer_password' %}
	{%- if form.posted_successfully? or form.errors -%}
		{%- assign form_submitted = true -%}
	{%- endif -%}
{% endform %}

{% comment %}
	Login
{% endcomment %}
<div class="form form--triangles form--xsmall form--login" {% if form_submitted %} style="display: none"{% endif %}>
	{% form 'customer_login' %}
		{%- assign error_class = 'form__row--error' | prepend: ' ' -%}
		{%- capture error_login_email -%}{%- if form.errors contains 'form' -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}
		{%- capture error_login_password -%}{%- if form.errors contains 'form' -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}

		<div class="form__triangles">
			<div class="shell">
				<div class="form__holder">
					<div class="form__head">
						<h1 class="h2 form__title">
							<span>
								{{- 'customer.login.title' | t -}}
							</span>
						</h1><!-- /.form__title -->
					</div><!-- /.form__head -->

					{% if form.errors %}
						<div class="form__errors">
							{{- form.errors | default_errors -}}
						</div><!-- /.form__errors -->
					{% endif %}
				</div><!-- /.form__holder -->
			</div><!-- /.shell -->
		</div><!-- /.form__triangles -->

		<div class="form__container">
			<div class="shell">
				<div class="form__holder">
					<div class="form__body">
						<div class="form__row{{ error_login_email }}">
							<label for="field-login-email" class="form__label">{{- 'customer.login.email' | t -}}</label>

							<div class="form__controls">
								<input type="email" class="field" name="customer[email]" id="field-login-email" value="" placeholder="{{- 'customer.login.email' | t -}}" >
							</div><!-- /.form__controls -->
						</div><!-- /.form__row -->

						<div class="form__row{{- error_login_password -}}">
							<label for="field-login-password" class="form__label">{{- 'customer.login.password' | t -}}</label>

							<div class="form__controls">
								<input type="password" class="field" name="customer[password]" id="field-login-password" value="" placeholder="{{- 'customer.login.password' | t -}}" >
							</div><!-- /.form__controls -->
						</div><!-- /.form__row -->
					</div><!-- /.form__body -->

					<div class="form__foot">
						<div class="form__foot-row">
							<a href="#form--recover" class="forgotten-pass link link--blue">{{ 'customer.login.forgot_password' | t }}</a>
						</div><!-- /.form__foot-row -->

						<div class="form__actions">
							<ul>
								<li>
									<button type="submit" class="form__btn btn btn--large">
										{{- 'customer.login.sign_in' | t -}}
									</button>
								</li>
							</ul>
						</div><!-- /.form__actions -->

						<div class="form__foot-row">
							<span>{{ 'customer.login.or' | t }}</span>
							<a href="/account/register" class="link link--blue">{{ 'customer.login.create_account' | t }}</a>
						</div><!-- /.form__foot-row -->
					</div><!-- /.form__foot -->
				</div><!-- /.form__holder -->
			</div><!-- /.shell -->
		</div><!-- /.form__container -->
	{% endform %}
</div><!-- /.form -->

{% comment %}
	Login as a Guest
{% endcomment %}
{% if shop.checkout.guest_login %}
	<div class="form form--guest">
		<div class="form__container">
			<div class="shell">
				<div class="form__holder">
					{%- form 'guest_login' -%}
						<div class="form__head">
							<h2 class="form__title">
								{{- 'customer.login.guest_title' | t -}}
							</h2><!-- /.form__title -->
						</div><!-- /.form__head -->

						<div class="form__foot">
							<div class="form__actions">
								<ul>
									<li>
										<button type="submit" class="form__btn btn btn--large">
											{{- 'customer.login.guest_continue' | t -}}
										</button>
									</li>
								</ul>
							</div><!-- /.form__actions -->
						</div><!-- /.form__foot -->
					{% endform %}
				</div><!-- /.form__holder -->
			</div><!-- /.shell -->
		</div><!-- /.form__container -->
	</div><!-- /.form -->
{%- endif -%}

{% comment %}
	Forgot Password
{% endcomment %}
<div class="form form--triangles form--xsmall form--recover"{% if form_submitted %} style="display: block"{% endif %}>
	{% form 'recover_customer_password' %}
		{%- assign error_class = 'form__row--error' | prepend: ' ' -%}
		{%- capture error_reset_email -%}{%- if form.errors contains 'form' -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}

		<div class="form__triangles">
			<div class="shell">
				<div class="form__holder">
					<div class="form__head">
						<h2 class="form__title">
							<span>
								{{- 'customer.recover_password.title' | t -}}
							</span>
						</h2><!-- /.form__title -->
					</div><!-- /.form__head -->

					<div class="form__description entry">
						<p>
							{{- 'customer.recover_password.subtext' | t -}}
						</p><!-- /.form__description -->
					</div><!-- /.form__description -->
				</div><!-- /.form__holder -->
			</div><!-- /.shell -->
		</div><!-- /.form__triangles -->

		<div class="form__container">
			<div class="shell">
				<div class="form__holder">
					{%- if form.posted_successfully? -%}
						<div class="form__message form__message--success">
							{{- 'customer.recover_password.success' | t -}}
						</div><!-- /.form-alert -->
					{%- else -%}
						{% if form.errors %}
							<div class="form__errors">
								{{- form.errors | default_errors -}}
							</div><!-- /.form__errors -->
						{% endif %}

						<div class="form__body">
							<div class="form__row{{ error_reset_email }}">
								<label for="field-reset-email" class="form__label">{{- 'customer.recover_password.email' | t -}}</label>

								<div class="form__controls">
									<input type="email" class="field" name="email" id="field-reset-email" value="" placeholder="{{- 'customer.recover_password.email' | t -}}" >
								</div><!-- /.form__controls -->
							</div><!-- /.form__row -->
						</div><!-- /.form__body -->

						<div class="form__foot">
							<div class="form__foot-row">
								<a href="#form--login" class="loginfrom-link link link--blue">{{ 'customer.reset_password.login' | t }}</a>
							</div><!-- /.form__foot-row -->

							<div class="form__actions">
								<ul>
									<li>
										<button type="submit" class="form__btn btn btn--large">
											{{- 'customer.recover_password.submit' | t -}}
										</button>
									</li>
								</ul>
							</div><!-- /.form__actions -->
						</div><!-- /.form__foot -->
					{%- endif -%}
				</div><!-- /.form__holder -->
			</div><!-- /.shell -->
		</div><!-- /.form__container -->
	{% endform %}
</div><!-- /.form -->
